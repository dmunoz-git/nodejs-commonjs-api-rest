{
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": false,
                "parser": "flow",
                "semi": true,
                "endOfLine": "auto"
            }
        ],
        "linebreak-style": ["error", "unix"],
        "consistent-return": "warn",
        "no-underscore-dangle": ["allow", ["_id", "__v"]]
    },
    "plugins": ["prettier"]
}
